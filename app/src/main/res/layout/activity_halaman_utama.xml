<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanUtama" android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1000dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/beruang"
                />
        </androidx.cardview.widget.CardView>
<LinearLayout android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginTop="-2dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID-1809"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_marginTop="1dp"
        />
</LinearLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="388dp"
        android:layout_height="129dp"
        android:backgroundTint="#0F469A"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Your Knowledge With \nQuizzez"
                android:textSize="14dp"
                android:textColor="#D6E6FF"
                android:layout_marginLeft="27dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're just looking for a playful way to learn \nnew facts, our quizzez are designed to \nentertain and educate."
                android:textSize="6dp"
                android:textColor="#D6E6FF"
                android:layout_marginLeft="27dp"/>
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play now"
                android:textColor="#094298"
                android:backgroundTint="#FFF8F2"
                android:layout_marginLeft="24dp"
                />
            <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:src="@drawable/beruang2"
                android:layout_marginTop="-113dp"
                android:layout_marginLeft="200dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:background="#E8E8E8"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableEnd="@drawable/layer_2"
        android:id="@+id/pencarian"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/html_1"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="3dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="20dp"

            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/javascript__2__1"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="3dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="20dp"

            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/js_react_1"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="3dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="20dp"

            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/_687615910475_removebg_preview_1"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="3dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="20dp"

            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/python_logo_notext_svg_removebg_preview_1"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="3dp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>