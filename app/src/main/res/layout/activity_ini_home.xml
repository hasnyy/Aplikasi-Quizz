<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ini_home"
    android:orientation="vertical"
    android:background="#FFF8F2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1000dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/beruang"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_marginTop="-2dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID-1809"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:layout_marginTop="1dp"
                />
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:backgroundTint="#0F469A"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Your Knowledge With \nQuizzez"
                android:textSize="14dp"
                android:textColor="#D6E6FF"
                android:layout_marginLeft="27dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're just looking for a playful way to learn \nnew facts, our quizzez are designed to \nentertain and educate."
                android:textSize="6dp"
                android:textColor="#D6E6FF"
                android:layout_marginLeft="27dp"/>
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play now"
                android:textColor="#094298"
                android:backgroundTint="#FFF8F2"
                android:layout_marginLeft="24dp"
                />
            <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:src="@drawable/beruang2"
                android:layout_marginTop="-113dp"
                android:layout_marginLeft="200dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:background="#E8E8E8"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableEnd="@drawable/layer_2"
        android:id="@+id/pencarian"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <!--menu html-->
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/backmenuhome">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/html_5" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTML"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <!--menu javascript-->
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/backmenuhome">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_javascript"
                    android:layout_gravity="center"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java Script"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_marginTop="5sp"/>
        </LinearLayout>
        <!--menu react js-->
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/backmenuhome">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_reactjs"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="React JS"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
        <!--menu c++-->
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/backmenuhome"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/c"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C++"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
        <!--menu python-->
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/backmenuhome"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/python"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recc"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Html-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:backgroundTint="#FFF8F2"
                android:layout_margin="10sp"
                android:id="@+id/html"
                app:cardElevation="10sp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:padding="20sp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/backmenuhome">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/html_5"
                            android:layout_gravity="center"
                            android:padding="5sp"/>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HTML"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Question"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Java Script-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:background="@color/latar"
                android:layout_margin="10sp"
                android:backgroundTint="#FFF8F2"
                app:cardElevation="10sp"
                android:id="@+id/js">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <androidx.cardview.widget.CardView

                        android:padding="20sp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/backmenuhome">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/logo_javascript"
                            android:layout_gravity="center"
                            android:padding="5sp"/>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Java Script"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Question"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--React Js-->
            <androidx.cardview.widget.CardView
                android:id="@+id/reactjs"
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:layout_margin="10sp"
                app:cardElevation="10sp"
                android:backgroundTint="#FFF8F2"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:padding="20sp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/backmenuhome">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/logo_reactjs"
                            android:layout_gravity="center"
                            android:padding="5sp"/>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="React JS"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Question"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--C++-->
            <androidx.cardview.widget.CardView
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:layout_margin="10sp"
                app:cardElevation="10sp"
                android:backgroundTint="#FFF8F2"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:padding="20sp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/backmenuhome">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="5sp"
                            android:src="@drawable/c" />

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C++"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Question"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Python-->
            <androidx.cardview.widget.CardView
                android:id="@+id/python"
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:backgroundTint="#FFF8F2"
                android:layout_margin="10sp"
                app:cardElevation="10sp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <androidx.cardview.widget.CardView
                        android:padding="20sp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/backmenuhome">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/python"
                            android:layout_gravity="center"
                            android:padding="5sp"/>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Python"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Question"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttonhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottommenu"
        android:background="@color/white"
        app:itemIconTint="#0118D8"
        app:itemTextColor="#0118D8"/>


</LinearLayout>